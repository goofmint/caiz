{
  "id": "nodebb-plugin-ai-topic-summary",
  "name": "NodeBB AI Topic Summary",
  "description": "Automatically generate AI-powered summaries for NodeBB topics",
  "url": "https://github.com/goofmint/caiz",
  "library": "./library.js",
  "staticDirs": {
    "static": "./static"
  },
  "css": [
    "static/style.css"
  ],
  "scripts": [
    "static/main.js"
  ],
  "clientScripts": [
    "static/main.js"
  ],
  "languages": "languages",
  "hooks": [
    {
      "hook": "filter:post.create",
      "method": "onPostCreate"
    },
    {
      "hook": "filter:topic.get",
      "method": "onTopicGet"
    },
    {
      "hook": "static:app.load",
      "method": "onAppLoad"
    },
    {
      "hook": "filter:admin.header.build",
      "method": "addAdminMenu"
    }
  ],
  "templates": "./templates",
  "modules": {
    "../admin/plugins/ai-topic-summary.js": "static/admin.js"
  },
  "acpScripts": [
    "static/admin.js"
  ]
}