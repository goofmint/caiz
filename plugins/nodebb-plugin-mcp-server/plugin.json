{
  "id": "nodebb-plugin-mcp-server",
  "name": "Caiz MCP Server",
  "description": "MCP (Model Context Protocol) server implementation for NodeBB",
  "url": "https://github.com/goofmint/caiz",
  "library": "./library.js",
  "staticDirs": {
    "static": "./static"
  },
  "acpScripts": [
    "static/admin.js"
  ],
  "hooks": [
    {
      "hook": "static:app.load",
      "method": "init"
    },
    {
      "hook": "filter:admin.header.build",
      "method": "addAdminMenu"
    }
  ],
  "templates": "./templates",
  "languages": "languages",
  "modules": {
    "../admin/plugins/mcp-server.js": "static/admin.js"
  }
}