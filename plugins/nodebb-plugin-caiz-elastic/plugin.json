{
  "id": "nodebb-plugin-caiz-elastic",
  "name": "Caiz Elastic Search",
  "description": "Elasticsearch search provider for NodeBB (Caiz)",
  "version": "0.1.0",
  "library": "./library.js",
  "languages": "languages",
  "modules": {
    "../admin/plugins/caiz-elastic.js": "static/lib/admin/plugins/caiz-elastic.js"
  },
  "acpScripts": [
    "static/lib/admin/plugins/caiz-elastic.js"
  ],
  "hooks": [
    { "hook": "static:app.load", "method": "init" },
    { "hook": "filter:admin.header.build", "method": "addAdminNavigation" },
    { "hook": "action:topic.save", "method": "onTopicSave" },
    { "hook": "action:post.save", "method": "onPostSave" },
    { "hook": "action:topic.purge", "method": "onTopicPurge" },
    { "hook": "action:post.purge", "method": "onPostPurge" },
    { "hook": "action:post.delete", "method": "onPostDelete" },
    { "hook": "action:post.restore", "method": "onPostRestore" },
    { "hook": "action:post.edit", "method": "onPostEdit" },
    { "hook": "action:topic.post", "method": "onTopicPost" },
    { "hook": "action:topic.delete", "method": "onTopicDelete" },
    { "hook": "action:topic.restore", "method": "onTopicRestore" },
    { "hook": "action:topic.edit", "method": "onTopicEdit" },
    { "hook": "filter:search.query", "method": "onSearchQuery" }
  ]
}
